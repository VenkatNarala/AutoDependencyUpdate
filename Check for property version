task updateVersionVariables {
    doLast {
        println "ğŸ” Starting updateVersionVariables task..."

        def reportFile = file("build/dependencyUpdates/report.txt")
        def buildFile = file("build.gradle")

        if (!reportFile.exists()) {
            println "âŒ report.txt not found in project root."
            return
        }

        println "ğŸ“„ Reading report.txt..."
        def reportPattern = ~/^- ([\w\.\-]+):([\w\.\-]+) \[([\w\.\-]+) -> ([\w\.\-]+)]/
        def dependencyUpdates = [:]

        reportFile.eachLine { line ->
            def matcher = reportPattern.matcher(line.trim())
            if (matcher.matches()) {
                def group = matcher.group(1)
                def name = matcher.group(2)
                def oldVersion = matcher.group(3)
                def newVersion = matcher.group(4)
                def key = "${group}:${name}"
                dependencyUpdates[key] = [old: oldVersion, new: newVersion]
                println "âœ… Found update in report.txt: ${key} -> ${newVersion}"
            } else {
                println "â„¹ï¸ Skipped non-matching line in report.txt: ${line}"
            }
        }

        if (dependencyUpdates.isEmpty()) {
            println "âš ï¸ No dependency updates found in report.txt."
            return
        }

        println "ğŸ“„ Reading build.gradle..."
        def buildText = buildFile.text

        def varUsagePattern = ~/["']([\w\.\-]+):([\w\.\-]+):\$\{(\w+)\}["']/
        def varVersionUpdates = [:]

        println "ğŸ” Scanning build.gradle for variable-based dependencies..."
        varUsagePattern.matcher(buildText).each { match ->
            def group = match[1]
            def name = match[2]
            def varName = match[3]
            def key = "${group}:${name}"

            if (dependencyUpdates.containsKey(key)) {
                def newVersion = dependencyUpdates[key].new
                varVersionUpdates[varName] = newVersion
                println "ğŸ“Œ Found variable usage: ${key} -> variable '${varName}' to be updated to ${newVersion}"
            } else {
                println "âŒ No update found in report.txt for: ${key}"
            }
        }

        if (varVersionUpdates.isEmpty()) {
            println "âš ï¸ No matching variable updates found in build.gradle."
            return
        }

        println "âœï¸ Updating variable values inside ext { ... } block..."
        def updatedText = buildText.replaceAll(/(?m)^(\s*)(\w+)\s*=\s*'([\w\.\-]+)'/) { fullMatch, indent, varName, oldVersion ->
            if (varVersionUpdates.containsKey(varName)) {
                def newVersion = varVersionUpdates[varName]
                println "ğŸ› ï¸ Replacing: ${varName} = '${oldVersion}' â¡ï¸ ${newVersion}"
                return "${indent}${varName} = '${newVersion}'"
            } else {
                return fullMatch
            }
        }

        buildFile.text = updatedText
        println "âœ… build.gradle updated successfully."
    }
}
