import java.util.regex.*

task updateVersionVariablesOnly {
    group = "versioning"
    description = "Updates version variables in ext {} block using report.txt"

    doLast {
        def reportFile = file("build/dependencyUpdates/report.txt")
        def buildFile = file("build.gradle")

        println "ğŸ” Starting version variable update..."
        if (!reportFile.exists()) {
            println "âŒ report.txt not found!"
            return
        }

        def buildText = buildFile.text
        def versionMap = [:]

        // Parse report.txt for lines like: - group:name [old -> new]
        def pattern = ~/^\s*-\s*([^\s:]+):([^\s\[]+)\s*\[.*?->\s*([^\]]+)\s*\]/
        println "ğŸ“„ Reading report.txt..."

        reportFile.eachLine { line ->
            def matcher = line =~ pattern
            if (matcher.matches()) {
                def group = matcher[0][1].trim()
                def name = matcher[0][2].trim()
                def newVersion = matcher[0][3].trim()
                versionMap[name] = newVersion
                println "ğŸ”§ Will update: ${name} -> ${newVersion}"
            }
        }

        if (versionMap.isEmpty()) {
            println "âš ï¸ No version updates found."
            return
        }

        def updated = false

        versionMap.each { depName, newVersion ->
            def candidateVars = [
                "${depName}Version",
                depName.replaceAll('-', '') + "Version"
            ]
            def found = false

            candidateVars.each { varName ->
                def regex = ~/(?m)^(\s*)${varName}\s*=\s*['"]([^'"]+)['"]/
                if (buildText =~ regex) {
                    println "âœ… Updating variable ${varName} to ${newVersion}"
                    buildText = buildText.replaceAll(regex) { _, indent, oldVal ->
                        "${indent}${varName} = '${newVersion}'"
                    }
                    found = true
                    updated = true
                }
            }

            if (!found) {
                println "âš ï¸ No matching variable found for dependency: ${depName}"
            }
        }

        if (updated) {
            println "ğŸ’¾ Writing updated build.gradle..."
            buildFile.write(buildText)
            println "âœ… Version variables updated successfully."
        } else {
            println "ğŸ“­ No version variables updated in build.gradle."
        }
    }
}
